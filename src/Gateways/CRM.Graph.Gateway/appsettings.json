{
  "App": {
    "Name": "GraphQL-Gateway"
  },
  "Jaeger": {
    "Enabled": true,
    "ServiceName": "GraphQL-Gateway",
    "UdpHost": "localhost",
    "UdpPort": 6831,
    "MaxPacketSize": 0,
    "Sampler": "const"
  },
  "Services": {
    "ContactService": {
      "ServiceName": "Contact Service",
      "Url": "http://localhost:5001"
    }
  },
  "Logging": {
    "consoleEnabled": true,
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Debug",
        "HotChocolate": "Error"
      }
    }
  },
  "PathBase": "/gateway",
  "AllowedHosts": "*"
}
