  "version": "0.2.0",
  "configurations": [
    {
      "name": "Communication Service",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/Communication/CRM.Communication/bin/Debug/netcoreapp3.0/CRM.Communication.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Communication/CRM.Communication",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "^\\s*Now listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
